						"url": {
							"raw": "{{base_url}}/api/electricity-bills?userId=1&panelId=1&billingMonth=2024-01-01",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"electricity-bills"
							],
							"query": [
								{
									"key": "userId",
									"value": "1",
									"description": "Filter by user ID"
								},
								{
									"key": "panelId",
									"value": "1",
									"description": "Filter by panel ID"
								},
								{
									"key": "billingMonth",
									"value": "2024-01-01",
									"description": "Filter by billing month (YYYY-MM-DD)"
